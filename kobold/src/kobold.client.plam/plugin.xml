<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="kobold.plam"
   name="Kobold PLAM Plug-in"
   version="1.0.0"
   provider-name="Werkbold"
   class="kobold.client.plam.KoboldPLAMPlugin">

   <runtime>
      <library name="kobold-plam.jar"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.draw2d"/>
      <import plugin="org.eclipse.gef"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="kobold.commons"/>
      <import plugin="kobold.vcm"/>
   </requires>


   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Kobold PLAM Perspective"
            icon="icons/sample.gif"
            class="kobold.client.plam.PerspectiveFactory"
            id="kobold.client.plam.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="Architecture Editor"
            extensions="kae"
            icon="icons/sample.gif"
            class="kobold.client.plam.editor.ArchitectureEditor"
            id="KoboldPLAM.editors.ArchitectureEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="PLAM Tools"
            id="KoboldPLAM">
      </category>
      <view
            name="Role Tree"
            icon="icons/sample.gif"
            category="KoboldPLAM"
            class="kobold.client.plam.view.RoleTreeViewPart"
            id="kobold.client.plam.view.RoleTreeViewPart">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="kobold.client.plam.perspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               id="kobold.client.plam.view.RoleTreeViewPart"
               relationship="left">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="KoboldProjectNature"
         name="%nature.KoboldProjectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="kobold.client.plam.KoboldProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/sample.gif"
            natureId="kobold.plam.KoboldProjectNature"
            id="kobold.client.plam.NatureImage">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="Kobold"
            id="kobold.client.plam.category">
      </category>
      <wizard
            descriptionImage="icons/kprojectwiz.gif"
            name="newwizard.NewKoboldProjectWizards"
            icon="icons/sample.gif"
            category="kobold.client.plam.category"
            class="kobold.client.plam.wizard.NewProjectWizard"
            project="true"
            finalPerspective="kobold.client.plam.perspective"
            id="kobold.client.plam.newwizard">
         <description>
            Bla Fasel
         </description>
      </wizard>
   </extension>

</plugin>
